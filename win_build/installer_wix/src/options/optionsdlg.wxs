<?xml version="1.0" encoding="UTF-8"?>
  
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">  
  <Fragment>
    <!-- Local variables to track the checkbox state -->
    <Property Id="ENABLESTARTMENUITEMS" Secure="yes" />
    <Property Id="ENABLEUSEBYALLUSERS" Secure="yes" />
    <Property Id="ENABLESCREENSAVER" Secure="yes" />

    <Property Id="ENABLESTARTMENUITEMS_Description" Value="!(loc.ENABLESTARTMENUITEMS_Description)" />
    <Property Id="ENABLEUSEBYALLUSERS_Description" Value="!(loc.ENABLEUSEBYALLUSERS_Description)" />
    <Property Id="ENABLESCREENSAVER_Description" Value="!(loc.ENABLESCREENSAVER_Description)" />

    <!-- Outside variables to condition components based on checkbox final value -->
    <SetProperty Id="ENABLESTARTMENUITEMS_Checked" Value="1" Sequence="execute" Before="CostFinalize"><![CDATA[ENABLESTARTMENUITEMS]]></SetProperty>
    <SetProperty Id="ENABLEUSEBYALLUSERS_Checked" Value="1" Sequence="execute" Before="CostFinalize"><![CDATA[ENABLEUSEBYALLUSERS]]></SetProperty>
    <SetProperty Id="ENABLESCREENSAVER_Checked" Value="1" Sequence="execute" Before="CostFinalize"><![CDATA[ENABLESCREENSAVER]]></SetProperty>

    <UI>
      <Dialog Id="OptionsDlg" Width="370" Height="270" Title="!(loc.OptionsDlg_Title)">
        <Control Id="ProductVersion" Type="Text" X="10" Y="243" Width="56" Height="17" Text="[ProductVersion]" />
        
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Next" Type="PushButton" X="240" Y="243" Width="56" Height="17" Text="!(loc.WixUINext)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="BannerHeader" Type="Text" X="15" Y="6" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.OptionsDlgTitle)" />
        <Control Id="BannerSubHeader" Type="Text" X="15" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.OptionsDlgDescription)" />        
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.OptionsDlgBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <!-- Install the shortcuts in Programs Menu -->
        <Control Id="OPT1" Type="CheckBox" X="20" Y="70" Width="330" Height="18" CheckBoxValue="1" Hidden="no" 
                 Property="ENABLESTARTMENUITEMS" Text="[ENABLESTARTMENUITEMS_Description]" Disabled="no" />
                 
        <!-- Autostart managers for all users -->
        <Control Id="OPT2" Type="CheckBox" X="20" Y="90" Width="330" Height="18" CheckBoxValue="1" Hidden="no"
                 Property="ENABLEUSEBYALLUSERS" Text="[ENABLEUSEBYALLUSERS_Description]" Disabled="no" />

        <!-- Enable the screensaver -->
        <Control Id="OPT3" Type="CheckBox" X="20" Y="110" Width="330" Height="18" CheckBoxValue="1" Hidden="no" 
                 Property="ENABLESCREENSAVER" Text="[ENABLESCREENSAVER_Description]" Disabled="no" />

        <!-- AutoStart the Tray App -->
        <!-- <Control Id="OPT4" Type="CheckBox" X="20" Y="110" Width="330" Height="18" CheckBoxValue="1" Hidden="no" 
                 Property="ENABLESCREENSAVER_Checked" Text="[ENABLESCREENSAVER_Description]" Disabled="no" /> -->
      </Dialog>
    </UI>
  </Fragment>
</Wix>